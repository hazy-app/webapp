{
  "name": "hazy-webapp",
  "version": "1.0.0",
  "description": "Send and Receive anonymous messages",
  "author": "nainemom <nainemom@gmail.com>",
  "scripts": {
    "dev": "nuxt -p 3003 -H 0.0.0.0",
    "dev:spa": "nuxt --spa -p 3003 -H 0.0.0.0",
    "build:framevuerk": "framevuerk-builder -c ./framevuerk-config.js",
    "build": "nuxt build --spa",
    "start": "nuxt start --ssr -p 3003 -H 0.0.0.0",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:fix": "eslint --ext .js,.vue --ignore-path .gitignore . --fix",
    "precommit": "npm run lint",
    "deploy": "./publish.sh"
  },
  "dependencies": {
    "@nuxtjs/auth": "^4.5.3",
    "@nuxtjs/axios": "^5.0.0",
    "base-64": "^0.1.0",
    "clipboard-copy": "^2.0.1",
    "cookie-universal-nuxt": "^2.0.5",
    "cross-env": "^5.2.0",
    "font-awesome": "^4.7.0",
    "framevuerk": "^2.0.10",
    "modela": "^0.4.0",
    "moment": "^2.22.2",
    "nuxt": "^2.2.0",
    "nuxt-user-agent": "^1.0.2"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "eslint": "^5.0.1",
    "eslint-config-prettier": "^3.1.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-prettier": "2.6.2",
    "eslint-plugin-vue": "^4.0.0",
    "framevuerk-builder": "^2.0.0",
    "node-sass": "^4.10.0",
    "nodemon": "^1.11.0",
    "prettier": "1.14.3",
    "sass-loader": "^7.1.0"
  }
}
